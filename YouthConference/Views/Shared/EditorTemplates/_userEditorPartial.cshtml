@using TwitterBootstrapMVC
@model YouthConference.Models.RegisterModel

@{
    ViewBag.Title = "_userEditorPartial";
}


<div class="control-group">
    @Html.Bootstrap().LabelFor(m => m.UserName).ShowRequiredStar(true).HtmlAttributes(new{@class="control-label"})
    <div class="controls">
        @Html.Bootstrap().TextBoxFor(m => m.UserName).Placeholder("Username").Size(InputSize.XLarge)
        <br/>
        <span class="text-error">
            @Html.ValidationMessageFor(m => m.UserName)
        </span>
    </div>
</div>

<div class="control-group">
    @Html.Bootstrap().LabelFor(m => m.Password).ShowRequiredStar(true).HtmlAttributes(new{@class="control-label"})
    <div class="controls">
        @Html.Bootstrap().PasswordFor(m => m.Password).Placeholder("Password").Size(InputSize.XLarge)
        <br/>
        <span class="text-error">
            @Html.ValidationMessageFor(m => m.Password)
        </span>
    </div>
</div>

<div class="control-group">
    @Html.Bootstrap().LabelFor(m => m.ConfirmPassword).ShowRequiredStar(true).HtmlAttributes(new{@class="control-label"})
    <div class="controls">
        @Html.Bootstrap().PasswordFor(m => m.ConfirmPassword).Placeholder("Confirm Password").Size(InputSize.XLarge)
        <br/>
        <span class="text-error">
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </span>
    </div>
</div>


<div class="form-actions">
    @Html.Bootstrap().SubmitButton().Text("Create Admin Account").IconAppend(Icons.folder_open).Style(ButtonStyle.Primary)
</div>